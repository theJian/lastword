<!-- login.ejs -->
<!DOCTYPE html>
<html>
<% include _partials/head %>
<body>
<div class="container-fluid row">
	<div class="col-md-6 col-md-offset-3">
		<h1 class="text-center">Login</h1>
		<% if(message.length > 0) { %>
		<div class="alert alert-warning alert-dismissible"><button class="close" type="button" data-dismiss="alert">&times;</button>
			<%= message %>
		</div>
		<% } %>
		<form action="/login" method="POST">
			<div class="form-group">
				<label for="inputEmail">Email Address</label>
				<input type="email" class="form-control" id="inputEmail" placeholder="Email" name="Email">
			</div>
			<div class="form-group">
				<label for="inputPassword">Password</label>
				<input type="password" class="form-control" id="inputPassword" placeholder="Password" name="Password">
			</div>
			<p class="text-muted text-right">Need a account? <a href="./signup">sign up</a></p>
			<button type="submit" class="btn btn-default btn-lg btn-block">login</button>
		</form>
	</div>
</div>
<% include _partials/foot %>
</body>
</html>